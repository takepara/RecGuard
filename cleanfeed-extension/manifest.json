{
  "manifest_version": 3,
  "name": "CleanFeed Recording Guard",
  "version": "1.0",
  "description": "CleanFeedで録音ボタンの押し忘れを防止するChrome拡張機能",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://cleanfeed.net/studio*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}